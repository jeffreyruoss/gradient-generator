{
  "name": "gradient-generator",
  "homepage": "https://jeffreyruoss.github.io/gradient-generator/",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:npm": "vite build --mode npm",
    "preview": "vite preview",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "gh-pages": "^6.1.1",
    "vite": "^5.2.0",
    "vite-plugin-css-injected-by-js": "^3.5.1"
  },
  "files": [
    "dist-npm",
    "dist-npm/fonts",
    "index.d.ts"
  ],
  "main": "./dist-npm/gradient-generator.umd.js",
  "module": "./dist-npm/gradient-generator.es.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./dist-npm/gradient-generator.es.js",
      "require": "./dist-npm/gradient-generator.umd.js",
      "types": "./index.d.ts"
    },
    "./fonts/*": "./dist-npm/fonts/*"
  },
  "dependencies": {
    "lottie-web": "^5.12.2"
  }
}
